    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:NetflixClone"
    x:Class="NetflixClone.AppShell"
    Title="NetflixClone">
    <ShellContent Title="Profile Selection" ContentTemplate="{DataTemplate local:ProfileSelectionPage}" Route="ProfileSelectionPage" />
    <ShellContent Title="Home" ContentTemplate="{DataTemplate local:HomePage}" Route="HomePage"  />
    <ShellContent Title="Search" ContentTemplate="{DataTemplate local:SearchPage}" Route="SearchPage" />
    <ShellContent Title="Coming Soon" ContentTemplate="{DataTemplate local:ComingSoonPage}" Route="ComingSoonPage" />
    <ShellContent Title="Downloads" ContentTemplate="{DataTemplate local:DownloadsPage}" Route="DownloadsPage" />
    <ShellContent Title="Profile" ContentTemplate="{DataTemplate local:ProfilePage}" Route="ProfilePage" />


</Shell>
